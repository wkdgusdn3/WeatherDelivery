<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp">

    <RelativeLayout
        android:id="@+id/mainFragmentOne_weatherCircle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle">

        <ImageView
            android:id="@+id/mainFragmentOne_weatherIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/mainFragmentOne_weatherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainFragmentOne_weatherIcon"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/mainFragmentOne_weatherCircle"
        android:layout_toLeftOf="@+id/mainFragmentOne_weatherCircle"
        android:background="@drawable/circle"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="습도"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mainFragmentOne_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/mainFragmentOne_weatherCircle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기온"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mainFragmentOne_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/mainFragmentOne_weatherCircle"
        android:layout_toRightOf="@+id/mainFragmentOne_weatherCircle"
        android:background="@drawable/circle"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강수확률"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mainFragmentOne_rainfallProbability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" />
    </LinearLayout>
</RelativeLayout>

